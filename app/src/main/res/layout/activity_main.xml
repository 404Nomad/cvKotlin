<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Conteneur principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- SECTION 1 : Informations Personnelles -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informations Personnelles"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="1dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/images"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom : LOPEZ"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prénom : Nicolas"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Âge : 24 ans"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Séparateur -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp"/>

        <!-- SECTION 2 : Expériences Professionnelles -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expériences Professionnelles"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="8dp" />

        <!-- Expérience Pro 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon expérience au sein de la Gendarmerie Nationale m'a offert une précieuse opportunité pour développer mes compétences en travail d'équipe et gestion des situations complexes."
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Expérience Pro 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Projet de migration d'un ERP 'Business Central', actuellement on-premises, vers une nouvelle version en mode SaaS."
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Séparateur -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp"/>

        <!-- SECTION 3 : Formations -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formations"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="8dp" />

        <!-- Première ligne de formations -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Formation 1 : BAC STI2D option SIN (Systèmes informatiques et numériques)."
                android:textSize="16sp"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Formation 2 : Formation autodidacte en développement web et applicatif, axée web."
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Deuxième ligne de formations -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Formation 3 : IDEM formation spécialisée en développement web et applicatif de 02 ans."
                android:textSize="16sp"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Formation 4 : NA"
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Séparateur -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp"/>

        <!-- SECTION 4 : Compétences & Loisirs -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compétences et Loisirs"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Compétence : Programmation"
                android:textSize="16sp"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hobbie 1 : Jeux vidéo"
                android:textSize="16sp"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hobbie 2 : Voyages"
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
